    @Html.Partial("BookmarkInfo", (ArtX.Models.Bookmark) ViewBag.Bookmark, new ViewDataDictionary { { "1", ViewBag.userId }, { "2", ViewBag.b } })

<br />
@foreach (var comm in ViewBag.Bookmark.Comments)
{

    <div class="container" style=" width: 70%">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div style="color: lightskyblue">
                    <p style="color: lightgrey;">@comm.Content</p>
                    <small class="pull-right">@comm.Date</small>
                    <i class="glyphicon glyphicon-user"></i>
                    <strong style=""> @comm.User.UserName </strong>
                </div>



                @if (ViewBag.userId == comm.UserId || ViewBag.userId == comm.User.UserName)//daca userul actual este cel care a creeat bookmarkul sau cel care a puss comm ul
                {
                    <div style="display: inline-block; float : left; margin-right: 15px">
                        <a class="glyphicon glyphicon-pencil" href="/Comments/Edit/@comm.CommentId"></a>
                    </div>
                }

                @if (ViewBag.userId == comm.UserId || ViewBag.userId == comm.User.UserName || ViewBag.b == "da")
                {
                    <div style="display: inline-block; float : left">
                        <form method="post" action="/Comments/Delete/@comm.CommentId">
                            @Html.HttpMethodOverride(HttpVerbs.Delete)
                            <button class="glyphicon glyphicon-trash" style="color:rgba(151, 26, 26, 0.95); border: none; background: transparent" type="submit"></button>
                        </form>
                    </div>
                }
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>
    <hr />
}

