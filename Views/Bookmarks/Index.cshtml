
@{
    ViewBag.Title = "Index";
}

<h2>Afisare bookmark-uri</h2>

@foreach (var bookmark in ViewBag.Bookmarks)
{
    <h2>@bookmark.Title</h2>
    <p>@bookmark.Content</p>
    <p>@bookmark.Description</p>
    <p>@bookmark.Date</p>
    <p>@bookmark.Rating</p>
    <p>@bookmark.Album.AlbumTitle</p>
    <br />
    <a href="/Bookmarks/Show/@bookmark.BookmarkId">Afisare bookmark</a>
    <br />
    <a href="/Bookmarks/Edit/@bookmark.BookmarkId">Editeaza bookmark</a>
    <br />
    <br />
    <br />
}

<a href="/Albums/Index/">Afisare albume</a>
<br />
<a href="/Bookmarks/New">Adauga bookmark</a>
