
@{
    ViewBag.Title = "Index";
}

<h2>Afisare bookmark-uri</h2>

<h1>@ViewBag.Message</h1>

@foreach (var bookmark in ViewBag.Bookmarks)
{
    <div class="panel panel-default">
        @Html.Partial("BookmarkInfo", (ArtX.Models.Bookmark)bookmark)
        <br />

        <div align="center"><a class="btn-info col-xs-pull-5" href="/Bookmarks/Show/@bookmark.BookmarkId">Vizualizeaza bookmark-ul</a></div>
        <br />
        <br />
    </div>
}

<a href="/Bookmarks/New">Adauga bookmark</a>
