<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ArtX</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="        background-color: #131314">
    <div class="navbar navbar-inverse navbar-fixed-top">@*navbar-invers il face negru, ia vezi ce se intampla fara fixed top*@
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <h1 style=" text-decoration-style:wavy; font-size:25px; padding-bottom:14px; color:lightgrey">ArtX</h1>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style=" padding-top: 10px">
                    <li>@Html.ActionLink("Bookmarks", "Index", "Bookmarks")</li>
                    <li>@Html.ActionLink("Categories", "Index", "Albums")</li>

                    @*  @if (UserIsInRole("Admin"))
        {
            <li>@Html.ActionLink("Albums", "Index", "Albums")</li>
            <li>@Html.ActionLink("PosteazaBookmark", "New", "Bookmarks")</li>
        }*@

                    @if ((User.IsInRole("User")) || (User.IsInRole("Admin")))
                    {

                        <li>@Html.ActionLink("New Bookmark", "New", "Bookmarks")</li>
                        <li>@Html.ActionLink("New Category", "New", "Albums")</li>
                    }


                 @*   <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ArtX</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
